@model IEnumerable<DapperSampleNorthWind.Models.ProductViewModel>
@{
    ViewData["Title"] = "Product List";
}
<div class="card m-3">
    <div class="card-header">
    Product List
    </div>
    <div class="card-body">
        <a class="btn btn-outline-primary mb-2" asp-action="Create"> Create New Product</a>

        <div class = "card">
    <div class="card-header"> Upload Products Excel File   </div>
    <div class="card-body" >
        <form asp-action="BulkInsert"  enctype="multipart/form-data"  >
            <div class="form-group" >
                <lable> Excel File </lable>
                <input name="excelFile" id="excelFile" type="file" accept=".xlsx, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel" />
            </div>
            <div class="form-group">
                <button class="btn-primary btn-success" >
                    Send File
                </button>
            </div>

        </form>

    </div>
</div>
        <table class="table table-bordered table-striped">

            <thead>
                <tr>
                  <td>ProductID</td>                  
                  <td>ProductName</td>
                  <td>SupplierID</td>
                  <td>CategoryID</td>
                  <td>QuantityPerUnit</td>
                  <td>UnitPrice</td>
                  <td>CategoryName</td>
                  <td>CompanyName</td>
                  <td> </td>
               </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                <tr>
                  <td>@item.ProductID</td>
                  <td>@item.ProductName</td>
                  <td>@item.SupplierID</td>
                  <td>@item.CategoryID</td>
                  <td>@item.QuantityPerUnit</td>
                  <td>@item.UnitPrice</td>
                  <td>@item.CategoryName</td>
                  <td>@item.CompanyName</td>
                  <td>
                      <a asp-action="edit" asp-route-id = "@item.ProductID" class="btn btn-warning btn-sm" >Edit </a>
                      <a asp-action="delete" asp-route-id="@item.ProductID" class="btn btn-danger btn-sm"  onclick="return confirm(' are you sure remove item')">Delete </a>
                      </td>
                </tr>
                    

                }
            </tbody>

        </table>

    </div>

</div>

